@model IEnumerable<Gip.Models.Planner>
    <Gip.Models.Planner>


        <h1>Planner</h1>
        <form action="" method="post">
            <div class="form-group">
                <label for="dat">Datum:</label>
                <!-- zet hieronder in max nog dat datetime.today => year ervan + 1? Niet zeker of de min werkt, op controleren.-->
                <input type="date" id="dat" class="form-control" name="dat" min="@DateTime.Today.ToString("dd/MM/yyyy")" max="" required="required" />
                <small>Een datum die hoger gaat dan dit jaar + 1 wordt niet aanvaard. (Zaterdag en Zondag gesloten)</small>
            </div>
            <div class="form-group">
                <label for="uur">Startuur:</label>
                <input type="time" id="uur" class="form-control" name="uur" min="06:00" max="22:00" value="12:00" required="required" />
                <small>Openingstijden van 06:00 tot 22:00</small>
            </div>
            <div class="form-group">
                <label>Lokaal:</label>
                <select class="form-control" name="lokaalId" required="required">
                    @foreach (var planner in Model)
                    {
                        if (@planner.Gebouw != null)
                        {
                            <option value="@planner.Gebouw.Trim()@planner.Verdiep@planner.Nummer">@planner.Gebouw.Trim()@planner.Verdiep@planner.Nummer</option>
                        }
                    }
                </select>
                <small>Gelieve het lokaal aan te duiden</small>
            </div>
            <div class="form-group">
                <label>Een tweede lokaal toevoegen? (Gelieve de checkbox aan te duiden)</label> <br>
                <input id="checkbox" type=checkbox>
            </div>
            <div id="delivery" style="display:none;">
                <div class="form-group">
                    <label>Lokaal 2:</label>
                    <select class="form-control" name="lokaal2Id" required="required">
                        @foreach (var planner in Model)
                        {
                            if (@planner.Gebouw != null)
                            {
                                <option value="@planner.Gebouw.Trim()@planner.Verdiep@planner.Nummer">@planner.Gebouw.Trim()@planner.Verdiep@planner.Nummer@planner.Capaciteit</option>
                            }
                        }
                    </select>
                    <small>Gelieve het tweede lokaal aan te duiden</small>
                </div>
            </div>
            <div class="form-group">
                <label>Vak:</label>
                <select class="form-control" name="vakcode" required="required">
                    @foreach (var planner in Model)
                    {
                        if (@planner.Vakcode != null)
                        {
                            <option value="@planner.Vakcode">@planner.Vakcode @planner.Titel</option>
                        }
                    }
                </select>
                <small>Gelieve de vakcode aan te duiden</small>
            </div>
            <div class="form-group">
                <label>Lesduur:</label>
                <select class="form-control" name="duratie">
                    <option value="0.5">30 minuten</option>
                    @for (double i = 1.0; i <= 16.0; i += 0.5)
                    {
                        <option value="@i">@i uur</option>

                    }
                </select>
                <small>Gelieve de gewenste lesduur aan te duiden</small>
            </div>
            <div class="form-group">
                <label for="lessenlijst">Beschrijving</label>
                <textarea class="form-control" name="lessenlijst" rows="4" cols="50"></textarea>
                <small>Geef een eventuele beschrijving</small>

            </div>
                <button type="submit" class="btn btn-primary">Submit</button>
        </form>


        <script type="text/javascript">
            $('.datepicker').datepicker({
                daysOfWeekDisabled: [0, 6]
            });
        </script>
