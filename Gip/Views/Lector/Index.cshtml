@model List<StudentRequestsViewModel>

@{
    ViewData["Title"] = "View student requests";
}

@if (ViewBag.error == null)
{
    ViewBag.error = " ";
}
else
{
    @if (ViewBag.error.Contains("approveGood"))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>De student is geaccepteerd.</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (ViewBag.error.Contains("denyGood"))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>De student is afgewezen.</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (ViewBag.error.Contains("error")) 
    { 
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@ViewBag.error.Split("/")[1]</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}

<h1>Aanvragen</h1>
@if (Model.Any())
{
<table class="table table-bordered table-hover table-striped">
    <thead>
        @foreach (var studReq in Model)
        {
            if (studReq.cuId == -1)
            {
                <tr>
                    <th class="bg-light text-dark">@studReq.VakCode : @studReq.Titel </th>
                </tr>
            }
            else
            {
    <tr>
        <td class="bg-white">
            <h5>@studReq.RNum - @studReq.Naam @studReq.VoorNaam</h5>
            <button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#approveModal-@studReq.cuId">Accepteer</button>
            <div class="modal fade" id="approveModal-@studReq.cuId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Goedkeuring aanvraag</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form asp-action="ApproveStudent" asp-route-cuId="@studReq.cuId" method="post">
                                Ben je zeker dat je de @studReq.Naam @studReq.VoorNaam zijn aanvraag wilt goedkeuren voor het vak @studReq.Titel?
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-sm btn-success">Goedkeuren</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#denyModal-@studReq.cuId">Weiger</button>
            <div class="modal fade" id="denyModal-@studReq.cuId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Afwijzen aanvraag</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form asp-action="DenyStudent" asp-route-cuId="@studReq.cuId" method="post">
                                Ben je zeker dat je de @studReq.Naam @studReq.VoorNaam zijn aanvraag wilt afwijzen voor het vak @studReq.Titel?
                                U kan hier ook nog een korte omschrijving geven voor het afwijzen.
                                @*<input type="text" name="beschrijving" style="min-width:100%; height:100px " />*@
                                <textarea name="beschrijving" style="min-width:100%; height:100px "></textarea>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-sm btn-danger">Afwijzen</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </td>

  
          
      

    </tr>
            }





        }
    </thead>
    </table>
}
else
{
    <div class="card">
        <div class="card-header">
            No courses created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to go to the course page
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Vak" asp-action="Index">
                Courses
            </a>
        </div>
    </div>
}