@model Gip.Models.Planner

@{
    ViewData["Title"] = "ViewTopi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Overzicht lesmoment</h1>
<div>
    <h4>@Model.Titel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Vak:
        </dt>
        <dd class="col-sm-10">
            @Model.Vakcode @Model.Titel
        </dd>
        <dt class="col-sm-2">
            Lokaal:
        </dt>
        <dd class="col-sm-10">
            @Model.Gebouw.Trim()@Model.Verdiep@Model.Nummer
        </dd>
        <dt class="col-sm-2">
            Datum:
        </dt>
        <dd class="col-sm-10">
            @Model.Datum.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Van:
        </dt>
        <dd class="col-sm-10">
            @Model.Startmoment.TimeOfDay
        </dd>
        <dt class="col-sm-2">
            Tot:
        </dt>
        <dd class="col-sm-10">
            @Model.Eindmoment.TimeOfDay
        </dd>
        <dt class="col-sm-2">
            Lessen:
        </dt>
        <dd class="col-sm-10">
            @Model.LessenLijst
        </dd>
    </dl>
</div>

@* Hierin krijgt de lector dan een lijst van studenten te zien, die ze kan toewijzen ah coursemoment
    De implementatie van hoe de lector deze kan toewijzen moet ik nog bedenken, checkboxen/groene knoppen, dit is nog onzeker.*@

@if (User.IsInRole("Lector") && User.Identity.Name == Model.RNummer)
{
    if (Model.users.Any())
    {
        foreach (var user in Model.users)
        {
            <p>@user.UserName - @user.Naam - @user.VoorNaam</p>
        }
    }

    <div>
        <a asp-action="EditStudsInCm" asp-controller="Planner" asp-route-cmId="@Model.cmId" class="btn btn-sm  btn-success" style="width:auto">Student toevoegen aan planning</a>
    </div>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
