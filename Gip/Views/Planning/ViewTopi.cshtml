@model Gip.Models.CourseMoment

@{
    ViewData["Title"] = "ViewTopi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ViewTopi</h1>
    <div>
        <h4>CourseMoment</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Lokaal:
            </dt>
            <dd class="col-sm-10">
                @Model.Gebouw.Trim()@Model.Verdiep@Model.Nummer
            </dd>
            <dt class="col-sm-2">
                Datum:
            </dt>
            <dd class="col-sm-10">
                @Model.Datum.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-2">
                Van:
            </dt>
            <dd class="col-sm-10">
                @Model.Startmoment.TimeOfDay
            </dd>
            <dt class="col-sm-2">
                De lessen die je gaat zien:
            </dt>
            <dd class="col-sm-10">
                @Model.LessenLijst
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
        <a asp-action="Index">Back to List</a>
    </div>
